#version 120

/* === Uniforms === */

uniform mat4 ProjectionMatrix;

/* === Varyings === */

varying vec2 TexCoord;

/* === Functions === */

void main()
{
    /* Process vertex transformation for position and normal */
    gl_Position	= ProjectionMatrix * gl_Vertex;
    TexCoord	= gl_MultiTexCoord0.xy;
}
